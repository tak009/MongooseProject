<div class="bg-nav">
  <nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand header" href="#">Mongo Scraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-items" aria-controls="navbar-items" aria-expanded="false" aria-label="Toggle navigation"></button>
    <div id="navbar-items" class="navbar-collapse collapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><a class="nav-link text-light" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link text-light" href="/saved">Saved Articles</a></li>
      </ul>
      <button id="scrape-btn" class="nav-link btn btn-scrape" type="submit" href="/">SCRAPE NEW ARTICLES!</button>
    </div>
  </nav>
</div>
<div class="jumbotron text-center">
  <h1>Mongo Scraper</h1>
  <h2>New York Times Edition</h2>
</div>

<div id="headlines">
  {{#each headlines}}
    <div class="card m-5 article" data-id={{@index}}>
      <div class="card-header article-title headline">
        <h3>
          <a class="article-link" href="{{link}}" target="_blank">{{title}}</a>
          <button class="btn btn-scrape text-dark save" type="submit">Save Article</button>
        </h3>
      </div>
      <div class="card-body summary">
        {{summary}}
      </div>
    </div>
  {{/each}}
</div>


<div id="notes"></div>


